{% extends 'base.html' %}

{% block title %}Edit element{% endblock %}

{% block breadcrumb %}
  <li class="breadcrumb-item"><a href="{% url 'home'%}">Books</a></li>
  <li class="breadcrumb-item"><a href="{% url 'book_units' element_e.unit.book.pk%}">{{element_e.unit.book.title}}</a></li>
  <li class="breadcrumb-item"><a href="{% url 'unit_elements' element_e.unit.book.pk element_e.unit.pk%}">{{ element_e.unit.chapter_number }}</a></li>
  <li class="breadcrumb-item" active>Edit Element</li>
{% endblock %}

{% block content %}
  <form method="post" class="mb-4" novalidate>
    {% csrf_token %}
    {% include 'includes/form.html' %}
    <button type="submit" class="btn btn-success">Save changes</button>
    <a href="{% url 'unit_elements' element_e.unit.book.pk element_e.unit.pk%}"  class="btn btn-outline-secondary" role="button">Cancel<a>
  </form>
{% endblock %}